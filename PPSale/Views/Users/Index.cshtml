@model IEnumerable<PPSale.Models.Globals.User>

@{
    var Pagina = "Usuarios";
    var Controler = "User";
    var Controlers = "Users";
    ViewBag.Title = Pagina;
}


<div class="col-sm-12">
    <div class="col-sm-12">
        <h4 class="list-group-item color-title-blue">
            @Pagina
        </h4>
        <div class="col-sm-6 btn-group-line">
            <div>
                <a class="btn  btn-success btn-volver" href="@Url.Action("Additional","Navs" )" title="Volver">Volver</a>
            </div>
            <div>
                <a class="btn  btn-success  btn-inicio" href="@Url.Action("Index","Home" )" title="Inicio">Inicio</a>
            </div>
            <div>
                <a class="btn btn-primary dialog-window  btn-nuevo" href="@Url.Action("Create",Controlers)" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Agregar @Pagina">Nuevo</a>
            </div>
        </div>
    </div>
</div>
@if (TempData["Action"] != null && TempData.Count != 0)
{

    if (TempData["Action"].Equals("Error"))
    {
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else if (TempData["Action"].ToString() == "Success")
    {
        <div class="alert alert-info alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Felicitaciones!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Alerta!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }


}

        <table class="table tableTwoBtn table-striped table-bordered" id="example">
            <thead class="table-dark">
                <tr>
                    <th>

                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country.Name) &nbsp;
                        @Html.DisplayNameFor(model => model.Province.Name) &nbsp;
                        @Html.DisplayNameFor(model => model.City.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cuit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>Acci&oacute;n</th>
                </tr>
                </thead>
            <tbody class=" table-hover">
                @if (Model == null || Model.Count() == 0)
                {
                    <tr>
                        <td colspan="7">
                            No hay Elementos...
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Logo))
                                {
                                    <img src="@Url.Content(item.Logo)" alt="Image" style="width:auto;height:25px; padding:0px; margin:0px;" />
                                }
                            </td>
                            <td class="data-@Html.DisplayFor(modelItem => item.UserId)">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country.Name) &nbsp;
                                @Html.DisplayFor(modelItem => item.Province.Name) &nbsp;
                                @Html.DisplayFor(modelItem => item.City.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cuit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit",new { id=item.UserId })" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar @Pagina"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.UserId)" data-controller="@Controler"><span class="fa fa-eraser" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="table-dark">
                <tr><td colspan="7">pie de tabla</td></tr>
            </tfoot>
        </table>
