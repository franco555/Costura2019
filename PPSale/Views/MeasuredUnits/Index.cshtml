@model IEnumerable<PPSale.Models.Complement.MeasuredUnit>

@{
    var Pagina = "Unidad de Medida";
    var Controler = "MeasuredUnit";
    var Controlers = "MeasuredUnits";
    ViewBag.Title = Pagina;
}

<div class="col-sm-12">
    <div class="row color-title-blue">
        <a class="btn  btn-success btn-volver btn-circles mr-2" href="@Url.Action("Configuration","Navs" )" title="Volver">Volver</a>
        <a class="btn  btn-success  btn-inicio btn-circles mr-2" href="@Url.Action("Index","Home" )" title="Inicio">Inicio</a>
        <a class="btn btn-primary dialog-window  btn-nuevo btn-circles mr-2" href="@Url.Action("Create",Controlers)" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Agregar @Pagina">Nuevo</a>
        <span class="title-color-blue  btn-circles btn-circle-border-2 mr-5">@Pagina</span>
    </div>
</div>

@RenderPage("~/Views/Shared/_NotificationPartial.cshtml")


<table class="table tableTwoBtn table-striped table-bordered" id="example">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abrev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equivalent)
            </th>
            <th>Acci&oacute;n</th>
        </tr>
    </thead>
    <tbody class=" table-hover">
        @if (Model == null || Model.Count() == 0)
        {
            <tr>
                <td colspan="4">
                    No hay Elementos...
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="data-@Html.DisplayFor(modelItem => item.MeasuredUnitId)">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abrev)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Equivalent)
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                         <a href="@Url.Action("Edit",new {id=item.MeasuredUnitId })" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="@Pagina"><span class="fa-edit fa" aria-hidden="true"></span></a>
                        <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.MeasuredUnitId)" data-controller="@Controler"><span class="fa-eraser fa" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        }

    </tbody>
    <tfoot class="table-dark">
        <tr><td colspan="4">pie de tabla</td></tr>
    </tfoot>

</table>
