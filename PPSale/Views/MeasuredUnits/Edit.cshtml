@model PPSale.Models.Complement.MeasuredUnit

@{
    var Pagina = "Unidad de Medida";
    var Controlers = "MeasuredUnits";
    ViewBag.Title = Pagina;
}


@using (Html.BeginForm("Edit", @Controlers, FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CompanyId)
        @Html.HiddenFor(model => model.MeasuredUnitId)

        <div class="form-alter">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="input-group mt-3">
                @Html.LabelFor(model => model.Abrev, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Abrev, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Abrev, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="input-group mt-3">
                @Html.LabelFor(model => model.UnitBaseId, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.DropDownList("UnitBaseId", null, htmlAttributes: new { @class = "form-control col-md-12" })
                    @Html.ValidationMessageFor(model => model.UnitBaseId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="input-group mt-3">
                @Html.LabelFor(model => model.Equivalent, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Equivalent, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Equivalent, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-md-12">
                <div class="btn-rigth">
                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
