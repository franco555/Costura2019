@model IEnumerable<PPSale.Models.Complement.ProductClassification>

@{
    var Pagina = "Producto - Clasificación";
    var Controler = "ProductClassification";
    var Controlers = "ProductClassifications";
    ViewBag.Title = Pagina;
}

<h2 class="header-title">Nueva  @Pagina</h2>

<div class="col-lg-12">
    <p class="btn-new" style="display:inline-flex">
        <a class="btn btn-success" href="@Url.Action("Index","Home" )" title="Inicio"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>
    </p>
    <p class="btn-new" style="display:inline-flex">
        <a class="btn btn-info" href="@Url.Action("Configuration","Navs" )" title="Volver"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>&nbsp;Volver</a>
    </p>
    @if (TempData["Valid"] != null && TempData.Count != 0)
    {
        <p class="btn-new" style="display:inline-flex">
            <a class="btn btn-primary" disabled href="" title="Nuevo"><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span> Nuevo</a>
        </p>
    }
    else
    {
        <p class="btn-new" style="display:inline-flex">
            <a class="btn btn-primary" href="@Url.Action("Create",Controlers )" title="Nuevo"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Nuevo</a>
        </p>
    }
</div>

<table class="table table-responsive tableTwoBtn ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodeBar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classification.Name)
        </th>
        <th>Acci&oacute;n</th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="7">
                No hay Elementos...
            </td>
        </tr>
    }
    else
    {


        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodeBar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classification.Name)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit",Controlers,new { id=item.ProductClassificationId})" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                    <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.ProductClassificationId)" data-controller="@Controler"><span class="glyphicon glyphicon-erase" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    }

</table>
