@model IEnumerable<PPSale.Models.Complement.Kardex>

@{
    var Pagina = "Kardex";
    var Controler = "Kardex";
    var Controlers = "Kardexes";
    ViewBag.Title = Pagina;
}

<h2 class="header-title">Nueva  @Pagina</h2>

<div class="col-lg-12">
    <p class="btn-new" style="display:inline-flex">
        <a class="btn btn-success" href="@Url.Action("Index","Home" )" title="Inicio"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>
    </p>
    <p class="btn-new" style="display:inline-flex">
        <a class="btn btn-info" href="@Url.Action("Configuration","Navs" )" title="Volver"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>&nbsp;Volver</a>
    </p>
    <p class="btn-new " style="display:inline-flex">
        <a class="btn btn-primary" href="@Url.Action("Create",Controlers )" title="Nuevo"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Nuevo</a>
    </p>
</div>


@if (TempData["Error"] != null && TempData.Count != 0)
{
    <div class="alert alert-danger" role="alert">
        <strong>Alerta!</strong>&nbsp;&nbsp;@TempData["Error"]
    </div>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodeBar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductClassification.Product.Name) &nbsp;
            @Html.DisplayNameFor(model => model.ProductClassification.Classification.Name)
        </th>
        <th>
            Cantidad
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeasuredUnit.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>Acci&oacute;n</th>
    </tr>

    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="6">
                No hay Elementos...
            </td>
        </tr>

    }
    else
    {
        foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodeBar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductClassification.Product.Name)&nbsp;
                    @Html.DisplayFor(modelItem => item.ProductClassification.Classification.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeasuredUnit.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.KardexId })" class="btn btn-sm btn-warning" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                    <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.KardexId)" data-controller="@Controler"><span class="glyphicon glyphicon-erase" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    }

</table>
