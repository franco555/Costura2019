@model PPSale.Models.Complement.Classification

@{
    var Pagina = "Clasificación";
    var Controlers = "Classifications";
    ViewBag.Title = Pagina;
}


@using (Html.BeginForm("Edit", @Controlers, FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClassificationId)
        @Html.HiddenFor(model => model.CompanyId)

        <div class="form-alter">
            <div class="input-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "control-label col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="btn-rigth">
                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
