@model PPSale.Models.View.ProductClassificationAndKardex

@{
    var Pagina = "Producto y clasificación";
    var Controlers = "Classifications";
    ViewBag.Title = Pagina;
}


@using (Html.BeginForm("AddProdClass", @Controlers, FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CompanyId)
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.ClassificationId)

    <div class="form-alter">
        <div class="input-group">
            @Html.LabelFor(model => model.CodeBar, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.CodeBar, new { htmlAttributes = new { @class = "form-control  col-md-12" } })
                @Html.ValidationMessageFor(model => model.CodeBar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group mt-3">
            @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group mt-3">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control  col-md-12" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group mt-3">
            @Html.LabelFor(model => model.UnitBaseId, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.DropDownList("UnitBaseId", null, htmlAttributes: new { @class = "form-control  col-md-12" })
                @Html.ValidationMessageFor(model => model.UnitBaseId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12 mt-3">
            <div class="btn-rigth">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancelar</button>
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
