@model PPSale.Models.View.TDWithCDViewModel

@{
    var Pagina = "Categria de Documento";
    var Controler = "CategoryDocument";
    var Controlers = "ContentControl";
    ViewBag.Title = Pagina;
}

<div class="col-sm-12">
    <div class="row color-title-blue">
        <a class="btn  btn-success btn-volver btn-circles mr-2" href="@Url.Action("index")" title="Volver">Volver</a>
        <a class="btn  btn-success btn-menu btn-circles mr-2" href="@Url.Action("Additional","Navs" )" title="Menú">Menú</a>
        <a class="btn  btn-success  btn-inicio btn-circles mr-2" href="@Url.Action("Index","Home" )" title="Inicio">Inicio</a>
        <a class="btn btn-primary dialog-window  btn-nuevo btn-circles mr-2" href="@Url.Action("AddCatDoc",Controlers,new { Id=Model.TypeDocumentId})" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Agregar Cat. de documento">Nuevo</a>
        <span class="title-color-blue  btn-circles btn-circle-border-2 mr-5">@Pagina</span>
    </div>
</div>

@if (TempData["Action"] != null && TempData.Count != 0)
{

    if (TempData["Action"].Equals("Error"))
    {
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else if (TempData["Action"].ToString() == "Success")
    {
        <div class="alert alert-info alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Felicitaciones!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Alerta!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }

}




<table class="table tableTwoBtn">
    <thead class="table-dark">
        <tr>
            <th>
                Categorias de Documento
            </th>
            <th>Acci&oacute;n</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.categoryDocuments == null || Model.categoryDocuments.Count() == 0)
        {
            <tr>
                <td colspan="2">
                    No hay Elementos...
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model.categoryDocuments)
            {
                <tr>
                    <td class="data-@Html.DisplayFor(modelItem => item.CategoryDocumentId)">
                        @Html.DisplayFor(modelItem => item.Name) &nbsp;
                    </td>
                    <td>
                        <a href="@Url.Action("EditCatDoc",new {Idt=item.TypeDocumentId , Idc=item.CategoryDocumentId })" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar Cat. Documento"><span class="fa-edit fa" aria-hidden="true"></span></a>
                        <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.CategoryDocumentId)" data-controller="@Controler"><span class="fa-eraser fa" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot class="table-dark">
        <tr><td colspan="2">pie de tabla</td></tr>
    </tfoot>
</table>
