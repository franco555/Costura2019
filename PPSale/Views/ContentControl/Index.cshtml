@model PPSale.Models.View.ContentControlViewModel

@{
    var Pagina = "Controles";
    var Controler1 = "IvaCondition";
    var Controler2 = "TypePayment";
    var Controler3 = "TypeDocument";
    var Controlers = "ContentControl";
    ViewBag.Title = Pagina;
}

<div class="col-sm-12">
    <div class="row color-title-blue">
        <a class="btn  btn-success btn-volver btn-circles mr-2" href="@Url.Action("Additional","Navs" )" title="Volver">Volver</a>
        <a class="btn  btn-success  btn-inicio btn-circles mr-2" href="@Url.Action("Index","Home" )" title="Inicio">Inicio</a>
        <span class="title-color-blue  btn-circles btn-circle-border-2 mr-5">@Pagina</span>
    </div>
</div>

@if (TempData["Action"] != null && TempData.Count != 0)
{

    if (TempData["Action"].Equals("Error"))
    {
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else if (TempData["Action"].ToString() == "Success")
    {
        <div class="alert alert-info alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Felicitaciones!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Alerta!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }

}
<div class="row">
    <div class="col-md">
        <table class="table tableTwoBtn">
            <thead class="table-dark">
                <tr>
                    <th>
                        Condicion de Iva
                    </th>
                    <th>
                        <a class="btn btn-sm btn-primary dialog-window btn-nuevo" href="@Url.Action("AddIvaCondition",Controlers)" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Condición de Iva">Nuevo</a>


                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ivaConditions == null || Model.ivaConditions.Count() == 0)
                {
                    <tr>
                        <td colspan="2">
                            No hay Elementos...
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.ivaConditions)
                    {
                        <tr>
                            <td class="data-@Html.DisplayFor(modelItem => item.IvaConditionId)">
                                @Html.DisplayFor(modelItem => item.Name) &nbsp;
                            </td>
                            <td>
                                <a href="@Url.Action("EditIvaCondition",new { id=item.IvaConditionId})" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar Condicion de Iva"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.IvaConditionId)" data-controller="@Controler1"><span class="fa fa-eraser" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="table-dark">
                <tr><td colspan="2">pie de tabla</td></tr>
            </tfoot>
        </table>
    </div>

    <div class="col-md">
        <table class="table tableTwoBtn">
            <thead class="table-dark">
                <tr>
                    <th>
                        Tipo de Pago
                    </th>
                    <th>
                        <a class="btn btn-sm btn-primary dialog-window btn-nuevo" href="@Url.Action("AddTypePayment",Controlers)" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Tipo de Pago">Nuevo</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.typePayments == null || Model.typePayments.Count() == 0)
                {
                    <tr>
                        <td colspan="2">
                            No hay Elementos...
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.typePayments)
                    {
                        <tr>
                            <td class="data-@Html.DisplayFor(modelItem => item.TypePaymentId)">
                                @Html.DisplayFor(modelItem => item.Name) &nbsp;
                            </td>
                            <td>
                                <a href="@Url.Action("EditTypePayment",new { id=item.TypePaymentId})" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar Tipo de Pago"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.TypePaymentId)" data-controller="@Controler2"><span class="fa fa-eraser" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="table-dark">
                <tr><td colspan="2">pie de tabla</td></tr>
            </tfoot>
        </table>
    </div>

    <div class="col-md">
        <table class="table tablethree">
            <thead class="table-dark">
                <tr>
                    <th>
                        Tipo de Documento
                    </th>
                    <th>
                        <a class="btn btn-primary dialog-window btn-nuevo" href="@Url.Action("AddTypeDocument",Controlers)" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Tipo de documento">Nuevo</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.typeDocuments == null || Model.typeDocuments.Count() == 0)
                {
                    <tr>
                        <td colspan="2">
                            No hay Elementos...
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.typeDocuments)
                    {
                        <tr>
                            <td class="data-@Html.DisplayFor(modelItem => item.TypeDocumentId)">
                                @Html.DisplayFor(modelItem => item.Name) &nbsp;
                            </td>
                            <td>
                                <a href="@Url.Action("EditTypeDocument",new { id=item.TypeDocumentId})" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar Tipo de documento"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                <a href="@Url.Action("TDWithCD",new {id=item.TypeDocumentId })" class="btn btn-sm btn-info" title="Editar"><span class="fa fa-list-alt" aria-hidden="true"></span></a>
                                <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.TypeDocumentId)" data-controller="@Controler3"><span class="fa fa-eraser" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="table-dark">
                <tr><td colspan="2">pie de tabla</td></tr>
            </tfoot>
        </table>
    </div>

</div>
