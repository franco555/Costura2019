@model IEnumerable<PPSale.Models.Globals.AsingRolAndUser>

@{
    var Pagina = "Asinacion de Rol y Usuario";
    var Controler = "AsingRolAndUser";
    var Controlers = "AsingRolAndUsers";
    ViewBag.Title = Pagina;
}

<div class="col-sm-12">
    <div class="col-sm-12">
        <h4 class="list-group-item color-title-blue">
            @Pagina
        </h4>
        <div class="col-sm-6 btn-group-line">
            <div>
                <a class="btn  btn-success btn-volver" href="@Url.Action("Additional","Navs" )" title="Volver">Volver</a>
            </div>
            <div>
                <a class="btn  btn-success  btn-inicio" href="@Url.Action("Index","Home" )" title="Inicio">Inicio</a>
            </div>
            <div>
                <a class="btn btn-primary dialog-window  btn-nuevo" href="@Url.Action("Create",Controlers)" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Agregar @Pagina">Nuevo</a>
            </div>
        </div>
    </div>
</div>

@RenderPage("~/Views/Shared/_NotificationPartial.cshtml")


<table class="table tableTwoBtn">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol.Name)
        </th>
        <th>Acci&oacute;n</th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="4">
                No hay Elementos...
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td class="data-@Html.DisplayFor(modelItem => item.AsingRolAndUserId)">
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol.Name)
                </td>
                <td>

                    <a href="@Url.Action("Edit",new { id=item.AsingRolAndUserId })" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Agregar @Pagina"><span class="fa fa-edit" aria-hidden="true"></span></a>
                    <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.AsingRolAndUserId)" data-controller="@Controler"><span class="fa fa-eraser" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    }



</table>
