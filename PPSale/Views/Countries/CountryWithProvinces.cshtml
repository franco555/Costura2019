@model PPSale.Models.View.CountryWithProvincesViewModel

@{
    var Pagina = "Provincias";
    var Controler = "Province";
    var Controlers = "Countries";
    ViewBag.Title = Pagina;
}


<div class="header-title">
    <div class="Ec-Controls">
        <p class="btn-new btn-first" >
            <a class="btn btn-success" href="@Url.Action("Index","Countries" )" title="Volver"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>&nbsp;Volver</a>
        </p>
        <p class="btn-new">
            <a class="btn btn-success" href="@Url.Action("Index","Home" )" title="Inicio"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;Inicio</a>
        </p>
        <p class="btn-new" >
            <a class="btn btn-success" href="@Url.Action("Additional","Navs" )" title="Volver"><span class="glyphicon glyphicon glyphicon-th-large" aria-hidden="true"></span>&nbsp;Men&uacute;</a>
        </p>
        <p class="btn-new"><span>@Pagina</span></p>
        <p class="btn-new">
            <a class="btn btn-primary dialog-window" href="@Url.Action("AddProvince",Controlers,new { Id=Model.ContryId})" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Nueva Provincia"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Nuevo</a>
        </p>
    </div>
</div>

@if (TempData["Action"] != null && TempData.Count != 0)
{

    if (TempData["Action"].Equals("Error"))
    {
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else if (TempData["Action"].ToString() == "Succes")
    {
        <div class="alert alert-info alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Felicitaciones!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Alerta!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }

}




<table class="table tablethree">
    <caption>@Url.Content(Model.Name)</caption>
    <thead>
        <tr>
            <th colspan="1">
                Provincias
            </th>
            <th colspan="1">
                &#x23 Ciudades
            </th>
            <th>Acci&oacute;n</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.provinces == null || Model.provinces.Count() == 0)
        {
            <tr>
                <td colspan="3">
                    No hay Elementos...
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model.provinces)
            {
                <tr>
                    <td class="data-@Html.DisplayFor(modelItem => item.ProvinceId)">
                        @Html.DisplayFor(modelItem => item.Name) &nbsp;
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberCities) &nbsp;
                    </td>
                    <td>
                        <a href="@Url.Action("EditProvince",new { Idc=item.CountryId, Idp=item.ProvinceId })" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar Provincia"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                        <a href="@Url.Action("ProvinceWithCities",new {Idc=item.CountryId ,Idp=item.ProvinceId })" class="btn btn-sm btn-info" title="Editar"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></a>
                        <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.ProvinceId)" data-controller="@Controler"><span class="glyphicon glyphicon-erase" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr><td colspan="3">pie de tabla</td></tr>
    </tfoot>
</table>
