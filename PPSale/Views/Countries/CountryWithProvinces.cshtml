@model PPSale.Models.View.CountryWithProvincesViewModel

@{
    var Pagina = "Provincias";
    var Controler = "Province";
    var Controlers = "Countries";
    ViewBag.Title = Pagina;
}

<div class="col-sm-12">
    <div class="row color-title-blue">
        <a class="btn  btn-success btn-volver btn-circles mr-2" href="@Url.Action("index" )" title="Volver">Volver</a>
        <a class="btn  btn-success btn-menu btn-circles mr-2" href="@Url.Action("Additional","Navs" )" title="Menú">Menu</a>
        <a class="btn  btn-success  btn-inicio btn-circles mr-2" href="@Url.Action("Index","Home" )" title="Inicio">Inicio</a>
        <a class="btn btn-primary dialog-window  btn-nuevo btn-circles mr-2" href="@Url.Action("AddProvince",Controlers,new { Id=Model.ContryId})" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Agregar Provincia">Nuevo</a>
        <span class="title-color-blue  btn-circles btn-circle-border-2 mr-5">@Pagina</span>
    </div>
</div>

    @if (TempData["Action"] != null && TempData.Count != 0)
    {

        if (TempData["Action"].Equals("Error"))
        {
            <div class="alert alert-danger alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Error!!!</strong>&nbsp;&nbsp;@TempData["Message"]
            </div>
        }
        else if (TempData["Action"].ToString() == "Success")
        {
            <div class="alert alert-info alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Felicitaciones!!!</strong>&nbsp;&nbsp;@TempData["Message"]
            </div>
        }
        else
        {
            <div class="alert alert-warning alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Alerta!!!</strong>&nbsp;&nbsp;@TempData["Message"]
            </div>
        }

    }




    <table class="table tablethree table-striped table-bordered" id="example">
        <thead class="table-dark">
            <tr>
                <th colspan="1">
                    Provincias
                </th>
                <th colspan="1">
                    &#x23 Ciudades
                </th>
                <th>Acci&oacute;n</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.provinces == null || Model.provinces.Count() == 0)
            {
                <tr>
                    <td colspan="3">
                        No hay Elementos...
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model.provinces)
                {
                    <tr>
                        <td class="data-@Html.DisplayFor(modelItem => item.ProvinceId)">
                            @Html.DisplayFor(modelItem => item.Name) &nbsp;
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberCities) &nbsp;
                        </td>
                        <td>
                            <a href="@Url.Action("EditProvince",new { Idc=item.CountryId, Idp=item.ProvinceId })" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar Provincia"><span class="fa fa-edit" aria-hidden="true"></span></a>
                            <a href="@Url.Action("ProvinceWithCities",new {Idc=item.CountryId ,Idp=item.ProvinceId })" class="btn btn-sm btn-info" title="Editar"><span class="fa fa-list-alt " aria-hidden="true"></span></a>
                            <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.ProvinceId)" data-controller="@Controler"><span class="fa fa-eraser" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot class="table-dark">
            <tr><td colspan="3">pie de tabla</td></tr>
        </tfoot>
    </table>
