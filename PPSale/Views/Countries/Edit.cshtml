@model PPSale.Models.Globals.Country

@{
    var Pagina = "País";
    var Controlers = "Countries";
    ViewBag.Title = Pagina;
}
@*
    <h5 class="f-title f-titleEdit">
        <span class="title_CreateEdit f-orange">
            Editar:
        </span> @Pagina
    </h5>
*@
@using (Html.BeginForm("Edit", @Controlers, FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CountryId)

        <div class="form-Normal">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="btn-rigth">
                    <input type="submit" value="Actulizar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
