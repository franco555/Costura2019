@model PPSale.Models.View.ProvinceWithCititesViewModel

@{
    var Pagina = "Ciudades";
    var Controler = "City";
    var Controlers = "Countries";
    ViewBag.Title = Pagina;
}

<div class="col-sm-12">
    <div class="col-sm-12">
        <h4 class="list-group-item color-title-blue">
            @Pagina
        </h4>
        <div class="col-sm-6 btn-group-line">
            <div>
                <a class="btn  btn-success btn-volver" href="@Url.Action("CountryWithProvinces","Countries" ,new { Id=Model.ContryId})" title="Volver">Volver</a>
            </div>
            <div>
                <a class="btn  btn-success btn-menu" href="@Url.Action("Additional","Navs" )" title="Menú">Menu</a>
            </div>
            <div>
                <a class="btn  btn-success  btn-inicio" href="@Url.Action("Index","Home" )" title="Inicio">Inicio</a>
            </div>
            <div>
                <a class="btn btn-primary dialog-window  btn-nuevo" href="@Url.Action("AddCity",Controlers,new {idc=Model.ContryId ,idp=Model.ProvinceId})" title="Nuevo" id="btn-Option" data-Option="Create" data-title="Agregar Ciudad">Nuevo</a>
            </div>
        </div>
    </div>
</div>


@if (TempData["Action"] != null && TempData.Count != 0)
{

    if (TempData["Action"].Equals("Error"))
    {
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else if (TempData["Action"].ToString() == "Success")
    {
        <div class="alert alert-info alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Felicitaciones!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Alerta!!!</strong>&nbsp;&nbsp;@TempData["Message"]
        </div>
    }

}




<table class="table tableTwoBtn table-striped table-bordered" id="example">
    <thead class="table-dark">
        <tr>
            <th>
                Ciudades
            </th>
            <th>Acci&oacute;n</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.cities == null || Model.cities.Count() == 0)
        {
            <tr>
                <td colspan="3">
                    No hay Elementos...
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model.cities)
            {
                <tr>
                    <td class="data-@Html.DisplayFor(modelItem => item.CityId)">
                        @Html.DisplayFor(modelItem => item.Name) &nbsp;
                    </td>
                    <td>
                        <a href="@Url.Action("EditCity",new { idc=item.CountryId, idp=item.ProvinceId, idci=item.CityId })" class="btn btn-sm btn-warning dialog-window" title="Editar" data-Option="Edit" data-title="Editar Provincia"><span class="fa fa-edit" aria-hidden="true"></span></a>
                        <a class="btn btn-danger btn-sm Delete-reg" title="Eliminar" data-id="@Html.DisplayFor(modelItem => item.CityId)" data-controller="@Controler"><span class="fa fa-eraser" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot class="table-dark">
        <tr><td colspan="2">pie de tabla</td></tr>
    </tfoot>
</table>
